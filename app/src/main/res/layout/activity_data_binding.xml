<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="peserta"
            type="com.example.user.juststart.model.Peserta"/>
    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorPrimaryGreen"
        tools:context="com.example.user.juststart.DataBindingActivity">

        <Button
            android:id="@+id/btn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{peserta.nama}"
            android:textColor="@android:color/white"
            android:background="@color/helloOrange"
            android:layout_marginTop="5dp"/>

        <Button
            android:id="@+id/btn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{peserta.usia}"
            android:textColor="@android:color/white"
            android:background="@color/helloOrange"
            android:layout_marginTop="5dp"/>

        <Button
            android:id="@+id/btn3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{peserta.alamat}"
            android:textColor="@android:color/white"
            android:background="@color/helloOrange"
            android:layout_marginTop="5dp"/>

        <Button
            android:id="@+id/btn4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tombol_4"
            android:textColor="@android:color/white"
            android:background="@color/helloOrange"
            android:layout_marginTop="5dp"/>

        <Button
            android:id="@+id/btn5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tombol_5"
            android:textColor="@android:color/white"
            android:background="@color/helloOrange"
            android:layout_marginTop="5dp"/>

    </LinearLayout>
</layout>