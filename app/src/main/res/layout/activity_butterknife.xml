        android:background="@color/helloOrange"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/btn4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tombol_4"
        android:textColor="@android:color/white"
        android:background="@color/helloOrange"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/btn5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tombol_5"
        android:textColor="@android:color/white"
        android:background="@color/helloOrange"
        android:layout_marginTop="5dp"/>

</LinearLayout>
